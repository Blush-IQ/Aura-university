  </div>  <script>
    const canvas = new fabric.Canvas('visionCanvas');

    document.getElementById('imageUploader').addEventListener('change', function (e) {
      const reader = new FileReader();
      reader.onload = function (f) {
        const imgObj = new Image();
        imgObj.src = f.target.result;
        imgObj.onload = function () {
          const image = new fabric.Image(imgObj);
          image.set({ left: 100, top: 100, scaleX: 0.3, scaleY: 0.3 });
          canvas.add(image);
        };
      };
      reader.readAsDataURL(e.target.files[0]);
    });

    function addText() {
      const textInput = document.getElementById('textInput').value;
      if (textInput.trim() === '') return;
      const text = new fabric.Text(textInput, {
        left: 150,
        top: 150,
        fill: '#cc2b5e',
        fontSize: 24
      });
      canvas.add(text);
      document.getElementById('textInput').value = '';
    }

    function resizeCanvas(view) {
      const canvasEl = document.getElementById('visionCanvas');
      if (view === 'mobile') {
        canvasEl.width = 375;
        canvasEl.height = 667;
        canvas.setWidth(375);
        canvas.setHeight(667);
      } else {
        canvasEl.width = 800;
        canvasEl.height = 500;
        canvas.setWidth(800);
        canvas.setHeight(500);
      }
    }

    function prepareDownload() {
      alert("Please sign up before downloading your board.");
    }

    function setProfilePic() {
      const file = document.getElementById('uploadProfile').files[0];
      const reader = new FileReader();
      reader.onload = function (e) {
        const img = document.getElementById('profilePic');
        img.src = e.target.result;
        img.style.display = 'block';
      }
      reader.readAsDataURL(file);
    }

    function shareBoard() {
      const dummyLink = 'https://myvisionapp.com/board/view/123456';
      document.getElementById('shareLink').value = dummyLink;
    }

    function copyLink() {
      const input = document.getElementById('shareLink');
      input.select();
      document.execCommand('copy');
      alert('Link copied to clipboard!');
    }

    function signUp() {
      const email = document.getElementById('email').value;
      const password = document.getElementById('password').value;
      if (email && password) {
        alert(`Signed up with: ${email}`);
        // Integrate Firebase Auth here
      } else {
        alert("Please enter both email and password.");
      }
    }
  </script></body>
