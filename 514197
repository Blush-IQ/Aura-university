  <title>My Journal</title>
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #fff0f5;
      padding: 20px;
      text-align: center;
    }
    h1 {
      color: #cc2b5e;
    }
    #profilePic {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      display: block;
      margin: 0 auto 20px;
    }
    .entry-box, .entry-item {
      width: 80%;
      margin: 10px auto;
      background-color: white;
      padding: 20px;
      border: 2px dashed #cc2b5e;
      border-radius: 10px;
    }
    textarea {
      width: 100%;
      height: 150px;
      padding: 15px;
      font-size: 16px;
      border-radius: 8px;
      border: 1px solid #ff85a2;
    }
    button {
      background-color: #ff85a2;
      color: white;
      padding: 10px 20px;
      margin: 8px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
    }
    button:hover {
      background-color: #cc2b5e;
    }
    .entry-history {
      margin-top: 30px;
    }
    .share-box, .prompt-box {
      margin-top: 30px;
    }
    #shareLink {
      margin-top: 10px;
      padding: 10px;
      width: 80%;
      border-radius: 8px;
    }
    .cute-btn {
      background-color: #cc2b5e;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 30px;
      font-size: 16px;
      font-weight: bold;
      margin: 10px;
    }
    .cute-btn:hover {
      background-color: #ff85a2;
    }
    select {
      padding: 8px;
      border-radius: 8px;
      border: 1px solid #cc2b5e;
      margin-top: 15px;
    }
